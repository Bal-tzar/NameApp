@model IEnumerable<NameApp.Models.Name>

@{
    ViewData["Title"] = "Names List";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>Names List</h2>
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            <div class="mb-3">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Name
                </a>
            </div>

            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Date Added</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var name in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => name.FullName)</td>
                                        <td>@name.DateAdded.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>
                                            <a asp-action="Delete" asp-route-id="@name.Id" 
                                               class="btn btn-danger btn-sm"
                                               onclick="return confirm('Are you sure you want to delete this name?')">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <div class="mt-3">
                    <small class="text-muted">Total names: @Model.Count()</small>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h4 class="alert-heading">No names yet!</h4>
                    <p>Get started by adding your first name.</p>
                    <a asp-action="Create" class="btn btn-primary">Add First Name</a>
                </div>
            }
        </div>
    </div>
</div>